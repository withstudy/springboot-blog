<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xhb.blog.mapper.PermissionMapper">
    <select id="findPermissionByUid" resultType="String" parameterType="Integer">
        select permission from permission where u_id=#{uid}
    </select>
</mapper>